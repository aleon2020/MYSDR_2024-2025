<robot name="sphere">

    <link name="body">

        <inertial>
            <origin xyz="0 0 3.0"/>
            <mass value="2.0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                               iyy="1.0" iyz="0.0"
                                         izz="1.0"/>
        </inertial>

        <visual>
            <origin xyz="0 0 3.0"/>
